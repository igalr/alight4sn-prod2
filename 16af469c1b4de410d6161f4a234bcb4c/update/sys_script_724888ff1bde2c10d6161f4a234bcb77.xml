        <script><![CDATA[(function executeRule(current, previous) {
    gs.info("anancall user " + current.user.user_name, "anancall");

    var responseBody;
    var status;
    try {
        var sm = new sn_ws.RESTMessageV2("syncAlightUser", "get");
        sm.setStringParameter("username", current.user.user_name);
        sm.setStringParameter("apikey", gs.getProperty('x_ananc_alight4sn.apikey'));
		
		sm.setHttpTimeout(10000);  // wait up to 10 seconds

        response = sm.execute();
        responseBody = response.haveError() ? response.getErrorMessage() : response.getBody();
        status = response.getStatusCode();
    } catch (ex) {
        responseBody = ex.getMessage();
        status = '500';
    }
    gs.info("Response: " + responseBody);
    gs.info("HTTP Status: " + status, "anancall");
})(current, previous);]]></script>
